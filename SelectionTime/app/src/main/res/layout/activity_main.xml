<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:text="Job"
                android:layout_weight="2"
                />
            <EditText
                android:id="@+id/txtJob"
                android:layout_weight="5"
                />

        </TableRow>
        <TableRow>

            <TextView
                android:text="Content"
                android:layout_weight="2"
                />
            <EditText
                android:id="@+id/txtContent"
                android:layout_weight="5"
                />
        </TableRow>

    </TableLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView android:text="Date Finish"
                android:layout_weight="3"
                />
            <TextView
                android:id="@+id/lblDateFinish"
                android:layout_weight="3"
                />
            <Button
                android:id="@+id/btnDateFinish"
                android:layout_weight="1"
                />
        </TableRow>

        <TableRow>
            <TextView android:text="Time Finish"
                android:layout_weight="3"
                />
            <TextView
                android:id="@+id/lblTimeFinish"
                android:layout_weight="3"
                />
            <Button
                android:id="@+id/btnTimeFinish"
                android:layout_weight="1"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnAdd"
        />

    <ListView
        android:layout_marginTop="20dp"
        android:id="@+id/lvListJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
